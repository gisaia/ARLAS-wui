{
  "id": "d-w",
  "version": "0.0.0",
  "title": "Download",
  "description": "Télécharger un ou plusieurs produits",
  "inputs": {
    "target_format": {
      "title": "Format",
      "description": "Format des produits téléchargés",
      "schema": {
        "type": "string",
        "enum": [
          "Geotiff",
          "JPEG2000"
        ],
        "required": true
      }
    },
    "target_projection": {
      "title": "Système de coordonées",
      "description": "Système de coordonées des produits téléchargés",
      "schema": {
        "type": "object",
        "enum": [
          {
            "label": "WGS 84",
            "value": "epsg:4326"
          },
          {
            "label": "Projection Lambert Maroc Zone I (Nord Maroc)",
            "value": "EPSG:18131"
          },
          {
            "label": "Projection Lambert Maroc Zone II (Sud Maroc)",
            "value": "EPSG:18132"
          },
          {
            "label": "Projection Lambert Maroc Zone III",
            "value": "EPSG:18134"
          },
          {
            "label": "Projection Lambert Maroc Zone IV",
            "value": "EPSG:18135"
          },
          {
            "label": "Projection UTM Zone 28",
            "value": "EPSG:32628"
          }
        ]
      }
    },
    "crop_wkt": {
      "title": "WKT",
      "description": "",
      "schema": {
        "type": "AOI"
      }
    }
  },
  "additionalParameters": {
    "parameters": [
      {
        "name": "target_format",
        "value": {
          "field": "metadata.ObservationContext.processusUsed.platform",
          "value": "PLEIADES",
          "newSchema": {
            "type": "string",
            "enum": [
              "JPEG2000"
            ],
            "required": true
          }
        }
      }
    ]
  }
}
